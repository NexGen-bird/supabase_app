<Login_Screen>:
    name: "login"
    MDFloatLayout:
        md_bg_color: 1,1,1,1
        
        MDLabel:
            text: "W e l c o m e   !"
            font_name: "assets/fonts/Poppins-Bold.ttf"
            font_size: "26sp"
            pos_hint:{"center_x":0.5,"center_y":.85}
            halign:"center"
            color: rgba(0,0,59,255)
        MDLabel:
            text: "Sign in to continue."
            # markup:True
            font_name: 'assets/fonts/Roboto-Regular.ttf'
            font_size: "17sp"
            halign:"center"
            pos_hint:{"center_y":.79}
            color: rgba(248, 178, 45,255)
        MDFloatLayout:
            size_hint: .80,.07
            pos_hint:{"center_x":0.53,"center_y":.63}
            MDTextField:
                id: Email
                mode: "outlined"
                pos_hint:{"center_x":.43,"center_y":0.5}
                MDTextFieldHintText:
                    text: "Email"
            
        MDFloatLayout:
            size_hint: .80,.07
            pos_hint:{"center_x":0.53,"center_y":.5}
            MDTextField:
                id: Password
                mode: "outlined"
                password:True
                pos_hint:{"center_x":.43,"center_y":0.5}
                MDTextFieldHintText:
                    text: "Password"
                # max_text_length: 10
                # input_filter: "int"
            MDIconButton:
                icon: "eye-off"
                pos_hint: {"center_y": .5}
                pos: Password.width - self.width + dp(10), 0
                theme_text_color: "Hint"
                # pos_hint:{"center_x":.98,"center_y":0.5}
                on_release:
                    self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                    Password.password = False if Password.password is True else True
                
            
        MDButton:
            style: "filled"
            pos_hint:{"center_x":.5,"center_y":.40}
            size_hint:.66,.065
            background_color:0,0,0,0
            font_name: "assets/fonts/Poppins-Bold.ttf"
            on_release:
                root.login(Email.text,Password.text)

            MDButtonText:
                text: "LOGIN"
                # app.screen_manager.change_screen("home")
            # canvas.before:
            #     Color:
            #         rgb: rgba(242, 129, 42)
            #     RoundedRectangle:
            #         size:self.size
            #         pos:self.pos
            #         radius:[5]
        MDButton:
            style: "text"
            pos_hint:{"center_x":0.5,"center_y":.25}
            color: rgba(68,78,132,255)
            font_size:"14sp"
            on_release:
                root.forgot_password(Email.text)

            MDButtonText:
                text:"Forgot Password ?"
